#!/bin/bash

RUN_DIR=/var/vcap/sys/run/route_populator
LOG_DIR=/var/vcap/sys/log/route_populator
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    exec /var/vcap/packages/route_populator/route_populator \
      -nats <%= p("route_populator.nats") %> \
      -backendHost <%= p("route_populator.backend_host") %> \
      -backendPort <%= p("route_populator.backend_port") %> \
      -appDomain <%= p("route_populator.app_domain") %> \
      -appName <%= p("route_populator.app_name") %> \
      -numRoutes <%= p("route_populator.num_routes") %> \
      >>  $LOG_DIR/route_populator.log \
      2>> $LOG_DIR/route_poulator.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
