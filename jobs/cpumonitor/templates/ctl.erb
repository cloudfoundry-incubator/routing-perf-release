#!/bin/bash

RUN_DIR=/var/vcap/sys/run/cpumonitor
LOG_DIR=/var/vcap/sys/log/cpumonitor
PIDFILE=${RUN_DIR}/pid


case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    exec /var/vcap/packages/cpumonitor/bin/cpumonitor -port 9999 -runInterval <%= p("cpumonitor.run_interval")%> \
      >>  $LOG_DIR/cpumonitor.stdout.log \
      2>> $LOG_DIR/cpumonitor.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
