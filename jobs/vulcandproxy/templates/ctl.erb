#!/bin/bash

RUN_DIR=/var/vcap/sys/run/vulcandproxy
LOG_DIR=/var/vcap/sys/log/vulcandproxy
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    exec /var/vcap/packages/vulcandproxy/bin/vulcandproxy \
      >>  $LOG_DIR/vulcandproxy.stdout.log \
      2>> $LOG_DIR/vulcandproxy.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
