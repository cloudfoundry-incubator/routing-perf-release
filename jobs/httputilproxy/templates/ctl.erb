#!/bin/bash

RUN_DIR=/var/vcap/sys/run/httputilproxy
LOG_DIR=/var/vcap/sys/log/httputilproxy
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    exec /var/vcap/packages/httputilproxy/bin/httputilproxy \
      >>  $LOG_DIR/httputilproxy.stdout.log \
      2>> $LOG_DIR/httputilproxy.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
