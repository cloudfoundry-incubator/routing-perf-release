#!/bin/bash -l

set -e

DIR=`dirname $0`

<%
  routers = nil
  if_p("performance_tests.routers") do |prop|
    routers = prop
  end.else do
    routers = link('gorouter').instances
  end
%>

<% routers.each do |router| %>
  tmpfile=$(mktemp)
  set +e
    ${DIR}/run_perf_test <%= router["address"] %> <%= router["tag"].blank? ? "gorouter" : router["tag"] %> > ${tmpfile}
    EXIT_STATUSES="${EXIT_STATUSES} $?"
  set -e
  TMPFILES="${TMPFILES} ${tmpfile}"
<% end %>

for TMPFILE in ${TMPFILES}; do
  cat $TMPFILE
done

for EXIT_STATUS in ${EXIT_STATUSES}; do
  if [ ${EXIT_STATUS} -gt 0 ] ; then
    exit 1
  fi
done
